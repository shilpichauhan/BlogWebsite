<% if(blogs != null) { %>
  <!-- <h1>IT WORKS</h1> -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%-blogs.title %></li>
    </ol>
  </nav>

  <div class="row">
    <div class="col-12 col-md-4">
      <img src="/uploads/<%- blogs.image %>" class="img-fluid sticky-top" style="top:20px;" alt="<%- blogs.title %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%-blogs.title %></h1></div>
        <div class="col-12 md-4"><i class="bi bi-tag"></i><%-blogs.category%></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Description:</h4>
          <%-blogs.description %>
        </div>
      </div>
    </div>

  </div>
  


<% } else {%>
  <p>No item is found.</p>
<% } %>